<UserControl x:Class="Cascade.Views.WelcomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cascade.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="Transparent">
    
    <!-- 欢迎页面 - 应用程序启动时显示，当没有选中任何Tab时可见 -->
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-50,0,0">
            <TextBlock Text="{DynamicResource Welcome_Title}" 
                       Foreground="White" 
                       FontSize="32" 
                       HorizontalAlignment="Left" 
                       Margin="0,0,0,20">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock Text="{DynamicResource Welcome_Instruction1}" Foreground="#DDFFFFFF" FontSize="16" Margin="0,5"/>
            <TextBlock Text="{DynamicResource Welcome_Instruction2}" Foreground="#DDFFFFFF" FontSize="16" Margin="0,5"/>

            <!-- 图标行占位 -->
        </StackPanel>

        <!-- 大电源按钮占位（右下角） -->
    </Grid>
</UserControl>
