    <!-- 音量图标 -->
    <Geometry x:Key="IconVolumeGeometry">F1 M 0,6 L 4,6 L 9,1 L 9,15 L 4,10 L 0,10 Z M 12,4 A 6,6 0 0 1 12,12 M 14,2 A 9,9 0 0 1 14,14</Geometry>

    <!-- =================================================================== -->
    <!-- 播放器按钮样式 -->
    <!-- =================================================================== -->
    
    <!-- 普通控制按钮样式 (透明背景，悬停发光) -->
    <Style x:Key="PlayerControlButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource AeroIconSilverBrush}"/>
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="Transparent">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Glow" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Glow" Storyboard.TargetProperty="Opacity" To="0.5" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="ContentPath" Storyboard.TargetProperty="Opacity" To="0.8" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ContentPath" Storyboard.TargetProperty="Opacity" To="0.3" Duration="0:0:0"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <!-- 悬停光晕 -->
                        <Ellipse x:Name="Glow" Fill="#40FFFFFF" Opacity="0" Margin="2">
                            <Ellipse.Effect>
                                <BlurEffect Radius="5"/>
                            </Ellipse.Effect>
                        </Ellipse>

                        <!-- 图标内容 -->
                        <Path x:Name="ContentPath" 
                              Data="{TemplateBinding Content}" 
                              Fill="{TemplateBinding Foreground}" 
                              Stretch="Uniform" 
                              Margin="6"
                              VerticalAlignment="Center" 
                              HorizontalAlignment="Center">
                            <Path.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                            </Path.Effect>
                        </Path>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 主播放按钮样式 (圆形底座) -->
    <Style x:Key="MainPlayButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="64"/>
        <Setter Property="Height" Value="64"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Highlight" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Highlight" Storyboard.TargetProperty="Opacity" To="0.8" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="Highlight" Storyboard.TargetProperty="Opacity" To="0.5" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="Icon" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="0.9" Duration="0:0:0.1"/>
                                        <DoubleAnimation Storyboard.TargetName="Icon" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="0.9" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <!-- 底座 -->
                        <Ellipse Fill="{StaticResource PlayerButtonBaseBrush}"/>
                        
                        <!-- 悬停高亮 (青蓝色发光) -->
                        <Ellipse x:Name="Highlight" Fill="#FF00CCFF" Opacity="0" Margin="2">
                            <Ellipse.Effect>
                                <BlurEffect Radius="8"/>
                            </Ellipse.Effect>
                        </Ellipse>

                        <!-- 图标 (银白色光泽) -->
                        <Path x:Name="Icon"
                              Data="{TemplateBinding Content}"
                              Fill="{StaticResource AeroIconSilverBrush}"
                              Stretch="Uniform"
                              Margin="18"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              RenderTransformOrigin="0.5,0.5">
                            <Path.RenderTransform>
                                <ScaleTransform/>
                            </Path.RenderTransform>
                            <Path.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.6"/>
                            </Path.Effect>
                        </Path>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 隐藏 Slider 默认的 RepeatButton 样式 -->
    <Style x:Key="SliderRepeatButtonStyle" TargetType="RepeatButton">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="IsTabStop" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Rectangle Fill="{TemplateBinding Background}" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 进度条样式 (Aero 风格) -->
    <Style x:Key="PlayerSliderStyle" TargetType="Slider">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 轨道背景 -->
                        <Border x:Name="TrackBackground"
                                Grid.Row="1"
                                Height="6"
                                CornerRadius="3"
                                BorderThickness="1"
                                BorderBrush="#80000000"
                                Background="#40000000"
                                VerticalAlignment="Center">
                        </Border>
                        
                        <!-- 进度填充 -->
                        <Track x:Name="PART_Track" Grid.Row="1">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Style="{StaticResource SliderRepeatButtonStyle}">
                                    <RepeatButton.Template>
                                        <ControlTemplate TargetType="RepeatButton">
                                            <Border Height="4" CornerRadius="2" VerticalAlignment="Center" Margin="1,0,0,0">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#FF66C2FF" Offset="0"/>
                                                        <GradientStop Color="#FF007ACC" Offset="0.5"/>
                                                        <GradientStop Color="#FF005C99" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                            </Border>
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </Track.DecreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb x:Name="Thumb" Width="10" Height="16" VerticalAlignment="Center">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border Background="White"
                                                    BorderBrush="#FF808080"
                                                    BorderThickness="1"
                                                    CornerRadius="1">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.3"/>
                                                </Border.Effect>
                                            </Border>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
