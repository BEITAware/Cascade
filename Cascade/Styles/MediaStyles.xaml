<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 列表栏旧背景样式 (提取供工具栏使用) -->
    <LinearGradientBrush x:Key="MediaBarGlassBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#40FFFFFF" Offset="0"/>
        <GradientStop Color="#10FFFFFF" Offset="0.45"/>
        <GradientStop Color="#00FFFFFF" Offset="0.45"/>
        <GradientStop Color="#05FFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <!-- ============================================== -->
    <!-- 缩略图视图样式 - GlassBottom 基底层画刷 -->
    <!-- ============================================== -->
    
    <DrawingBrush x:Key="ThumbnailGlassBottomBrush" Stretch="Fill">
        <DrawingBrush.Drawing>
            <GeometryDrawing>
                <GeometryDrawing.Geometry>
                    <RectangleGeometry Rect="0,0,90,90" RadiusX="6" RadiusY="6"/>
                </GeometryDrawing.Geometry>
                <GeometryDrawing.Brush>
                    <LinearGradientBrush StartPoint="0.5,-0.405855" EndPoint="0.5,1.40585">
                        <GradientStop Color="#FF8F939C" Offset="0.130168"/>
                        <GradientStop Color="#00FFFFFF" Offset="0.513017"/>
                        <GradientStop Color="#00191F34" Offset="0.519142"/>
                        <GradientStop Color="#22A0A0A0" Offset="0.981623"/>
                    </LinearGradientBrush>
                </GeometryDrawing.Brush>
                <GeometryDrawing.Pen>
                    <Pen Brush="#7F7E8DB3" Thickness="1" LineJoin="Round"/>
                </GeometryDrawing.Pen>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>

    <!-- ============================================== -->
    <!-- 缩略图视图样式 - GlassBottomSelected 选中状态基底层画刷 -->
    <!-- ============================================== -->
    
    <DrawingBrush x:Key="ThumbnailGlassBottomSelectedBrush" Stretch="Fill">
        <DrawingBrush.Drawing>
            <GeometryDrawing>
                <GeometryDrawing.Geometry>
                    <RectangleGeometry Rect="0,0,90,90" RadiusX="6" RadiusY="6"/>
                </GeometryDrawing.Geometry>
                <GeometryDrawing.Brush>
                    <LinearGradientBrush StartPoint="0.5,-0.405855" EndPoint="0.5,1.40585">
                        <GradientStop Color="#FFCCF6FF" Offset="0.130168"/>
                        <GradientStop Color="#00FFFFFF" Offset="0.503828"/>
                        <GradientStop Color="#00191F34" Offset="0.513017"/>
                        <GradientStop Color="#FF799197" Offset="0.981623"/>
                    </LinearGradientBrush>
                </GeometryDrawing.Brush>
                <GeometryDrawing.Pen>
                    <Pen Brush="#7F7E8DB3" Thickness="1" LineJoin="Round"/>
                </GeometryDrawing.Pen>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>

    <!-- ============================================== -->
    <!-- 缩略图视图样式 - GlassSlice 顶部覆盖层画刷 -->
    <!-- 提取自 Designs/GlassSlice.xaml，调整 Geometry 适配 90x90 -->
    <!-- ============================================== -->

    <!-- ============================================== -->
    <!-- 共享的 GlassSlice 径向渐变画刷 (玻璃高光效果) -->
    <!-- 优化：提取共用渐变，减少重复定义 -->
    <!-- ============================================== -->
    <RadialGradientBrush x:Key="GlassSliceRadialBrush" 
                         RadiusX="1.51443" RadiusY="1.78833" 
                         Center="1.12569,0.969563" GradientOrigin="1.12569,0.969563">
        <GradientStop Color="#0FFFFFFF" Offset="0.23124"/>
        <GradientStop Color="#00FFFFFF" Offset="0.577335"/>
        <GradientStop Color="#0EFFFFFF" Offset="0.583461"/>
        <GradientStop Color="#3FFFFFFF" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- 共享的 GlassSlice 边框画刷 -->
    <SolidColorBrush x:Key="GlassSliceBorderBrush" Color="#34B3E1FF"/>

    <!-- 列表视图专用的 GlassSlice (16:9 比例) -->
    <!-- 优化：移除冗余的 DrawingGroup 包装和空 RelativeTransform -->
    <DrawingBrush x:Key="ListViewThumbnailGlassSliceBrush" Stretch="Uniform">
        <DrawingBrush.Drawing>
            <GeometryDrawing Brush="{StaticResource GlassSliceRadialBrush}">
                <GeometryDrawing.Geometry>
                    <!-- 96x54 容器，描边 2px，内缩 1.0，圆角 2px -->
                    <RectangleGeometry Rect="1,1,94,52" RadiusX="2" RadiusY="2"/>
                </GeometryDrawing.Geometry>
                <GeometryDrawing.Pen>
                    <Pen Brush="{StaticResource GlassSliceBorderBrush}" Thickness="2" 
                         StartLineCap="Round" EndLineCap="Round" LineJoin="Round"/>
                </GeometryDrawing.Pen>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>
    
    <!-- 缩略图视图专用的 GlassSlice (1:1 比例) -->
    <DrawingBrush x:Key="ThumbnailGlassSliceBrush" Stretch="Fill">
        <DrawingBrush.Drawing>
            <GeometryDrawing Brush="{StaticResource GlassSliceRadialBrush}">
                <GeometryDrawing.Geometry>
                    <RectangleGeometry Rect="0,0,90,90" RadiusX="6" RadiusY="6"/>
                </GeometryDrawing.Geometry>
                <GeometryDrawing.Pen>
                    <Pen Brush="{StaticResource GlassSliceBorderBrush}" Thickness="2" 
                         StartLineCap="Round" EndLineCap="Round" LineJoin="Round"/>
                </GeometryDrawing.Pen>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>

    <!-- 缩略图16:9区域的letterbox背景色 (黑色填充) -->
    <SolidColorBrush x:Key="ThumbnailLetterboxBrush" Color="#FF000000"/>
    
    <!-- 缩略图16:9区域边框画刷 -->
    <SolidColorBrush x:Key="ThumbnailFrameBorderBrush" Color="#40FFFFFF"/>

    <!-- 列表栏背景样式 (比顶部栏稍亮，偏青) -->
    <LinearGradientBrush x:Key="MediaListHeaderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF1A3040" Offset="0"/>
        <GradientStop Color="#FF356080" Offset="1"/>
    </LinearGradientBrush>

    <!-- 列表头部分割线画刷 -->
    <LinearGradientBrush x:Key="MediaListHeaderSeparatorBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#00FFFFFF" Offset="0"/>
        <GradientStop Color="#80FFFFFF" Offset="0.5"/>
        <GradientStop Color="#00FFFFFF" Offset="1"/>
    </LinearGradientBrush>

    <!-- 工具栏按钮悬停背景画刷 (提取自 Designs/ToolButtonHover.xaml) -->
