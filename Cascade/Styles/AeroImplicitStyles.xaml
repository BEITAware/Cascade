<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:Cascade.Helpers">

    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    <!--                                                                                               -->
    <!--                              Aero 隐式样式资源字典                                             -->
    <!--                              AeroImplicitStyles.xaml                                          -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    <!--                                                                                               -->
    <!--  本文件专门用于定义【隐式样式】(Implicit Styles)。                                              -->
    <!--                                                                                               -->
    <!--  ┌─────────────────────────────────────────────────────────────────────────────────────────┐ -->
    <!--  │                                                                                         │ -->
    <!--  │  【什么是隐式样式？】                                                                      │ -->
    <!--  │                                                                                         │ -->
    <!--  │  隐式样式是没有 x:Key 属性的样式定义，它会自动应用于作用域内所有匹配 TargetType 的控件。      │ -->
    <!--  │                                                                                         │ -->
    <!--  │  示例：                                                                                   │ -->
    <!--  │      <Style TargetType="{x:Type Button}">     ← 隐式样式（无 x:Key）                       │ -->
    <!--  │          <Setter Property="Background" Value="Blue"/>                                   │ -->
    <!--  │      </Style>                                                                           │ -->
    <!--  │                                                                                         │ -->
    <!--  │  对比显式样式：                                                                           │ -->
    <!--  │      <Style x:Key="MyButtonStyle" TargetType="{x:Type Button}">   ← 显式样式（有 x:Key） │ -->
    <!--  │          <Setter Property="Background" Value="Blue"/>                                   │ -->
    <!--  │      </Style>                                                                           │ -->
    <!--  │                                                                                         │ -->
    <!--  └─────────────────────────────────────────────────────────────────────────────────────────┘ -->
    <!--                                                                                               -->
    <!--  ┌─────────────────────────────────────────────────────────────────────────────────────────┐ -->
    <!--  │                                                                                         │ -->
    <!--  │  【作用域说明】                                                                           │ -->
    <!--  │                                                                                         │ -->
    <!--  │  本文件通过 App.xaml 的 MergedDictionaries 全局合并，因此：                                 │ -->
    <!--  │                                                                                         │ -->
    <!--  │      ● 作用域 = 整个应用程序                                                              │ -->
    <!--  │      ● 所有匹配 TargetType 的控件都会自动应用样式                                          │ -->
    <!--  │      ● 无需在控件上显式指定 Style="{StaticResource ...}"                                  │ -->
    <!--  │                                                                                         │ -->
    <!--  └─────────────────────────────────────────────────────────────────────────────────────────┘ -->
    <!--                                                                                               -->
    <!--  ┌─────────────────────────────────────────────────────────────────────────────────────────┐ -->
    <!--  │                                                                                         │ -->
    <!--  │  【推荐在此定义的隐式样式】                                                                │ -->
    <!--  │                                                                                         │ -->
    <!--  │  以下控件推荐定义隐式样式以确保全局一致的 Aero 风格：                                        │ -->
    <!--  │                                                                                         │ -->
    <!--  │      ✓ ScrollBar       - 滚动条（已实现）                                                 │ -->
    <!--  │      ○ ScrollViewer    - 滚动视图容器                                                     │ -->
    <!--  │      ✓ TextBox         - 文本输入框（已实现）                                              │ -->
    <!--  │      ✓ Button          - 通用按钮（已实现）                                                │ -->
    <!--  │      ✓ ComboBox        - 下拉框（已实现）                                                  │ -->
    <!--  │      ✓ CheckBox        - 复选框（已实现）                                                  │ -->
    <!--  │      ✓ RadioButton     - 单选按钮（已实现）                                                │ -->
    <!--  │      ✓ ListBox         - 列表框（已实现）                                                  │ -->
    <!--  │      ○ ListView        - 列表视图                                                         │ -->
    <!--  │      ○ ToolTip         - 工具提示                                                         │ -->
    <!--  │      ○ ContextMenu     - 右键菜单                                                         │ -->
    <!--  │      ○ Menu            - 菜单栏                                                           │ -->
    <!--  │      ✓ ProgressBar     - 进度条（已实现）                                                  │ -->
    <!--  │      ✓ Slider          - 滑动条（已实现）                                                  │ -->
    <!--  │                                                                                         │ -->
    <!--  │  图例：✓ 已实现  ○ 待实现                                                                 │ -->
    <!--  │                                                                                         │ -->
    <!--  └─────────────────────────────────────────────────────────────────────────────────────────┘ -->
    <!--                                                                                               -->
    <!--  ┌─────────────────────────────────────────────────────────────────────────────────────────┐ -->
    <!--  │                                                                                         │ -->
    <!--  │  【注意事项】                                                                             │ -->
    <!--  │                                                                                         │ -->
    <!--  │  1. 隐式样式会覆盖控件的默认样式，请确保完整定义所需的模板和属性                              │ -->
    <!--  │  2. 如需局部覆盖，可在控件上显式指定其他样式                                                │ -->
    <!--  │  3. 隐式样式可以引用其他资源文件中的显式样式（通过 BasedOn 或 StaticResource）               │ -->
    <!--  │  4. 本文件加载顺序应在所有依赖资源之后（如 AeroColors.xaml, AeroScrollBars.xaml）           │ -->
    <!--  │                                                                                         │ -->
    <!--  └─────────────────────────────────────────────────────────────────────────────────────────┘ -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->

    <!-- 合并依赖的资源字典 -->
    <ResourceDictionary.MergedDictionaries>
        <!-- 滚动条组件样式依赖 -->
        <ResourceDictionary Source="AeroScrollBars.xaml"/>
        <!-- 控件样式依赖（包含 ComboBox 相关画刷） -->
        <ResourceDictionary Source="AeroControls.xaml"/>
    </ResourceDictionary.MergedDictionaries>

