    <!-- =================================================================== -->
    <!-- Aero 风格图标画刷 (银色光泽 + 阴影) -->
    <!-- =================================================================== -->
    
    <!-- 通用银色渐变 -->
    <LinearGradientBrush x:Key="AeroIconSilverBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFFFF" Offset="0"/>
        <GradientStop Color="#FFC0C0C0" Offset="0.5"/>
        <GradientStop Color="#FF808080" Offset="0.5"/>
        <GradientStop Color="#FFB0B0B0" Offset="1"/>
    </LinearGradientBrush>

    <!-- 播放图标 (三角形) -->
    <Geometry x:Key="IconPlayGeometry">F1 M 2,0 L 2,16 L 14,8 Z</Geometry>
    
    <!-- 暂停图标 (双竖线) -->
    <Geometry x:Key="IconPauseGeometry">F1 M 2,0 L 6,0 L 6,16 L 2,16 Z M 10,0 L 14,0 L 14,16 L 10,16 Z</Geometry>
    
    <!-- 停止图标 (正方形) -->
    <Geometry x:Key="IconStopGeometry">F1 M 2,2 L 14,2 L 14,14 L 2,14 Z</Geometry>
    
    <!-- 快退图标 (双左箭头) -->
    <Geometry x:Key="IconRewindGeometry">F1 M 8,1 L 8,15 L 0,8 Z M 16,1 L 16,15 L 8,8 Z</Geometry>
    
    <!-- 快进图标 (双右箭头) -->
    <Geometry x:Key="IconFastForwardGeometry">F1 M 0,1 L 0,15 L 8,8 Z M 8,1 L 8,15 L 16,8 Z</Geometry>

    <!-- 下一个图标 (三角形+竖线) -->
