<Window x:Class="Cascade.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cascade"
        xmlns:vm="clr-namespace:Cascade.ViewModels"
        xmlns:views="clr-namespace:Cascade.Views"
        mc:Ignorable="d"
        Title="{DynamicResource App_Title}" Height="957" Width="906"
        Style="{StaticResource AeroWindowStyle}"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AeroWindowBackgroundBrush}">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 顶部玻璃条 + TabControl -->
            <RowDefinition Height="*"/>
            <!-- 主内容区域 -->
            <RowDefinition Height="30"/>
            <!-- 底部状态栏 -->
        </Grid.RowDefinitions>

        <!-- 背景图形层（跨越第1和第2行） -->
        <Grid Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Bottom" Height="200" Margin="0,0,0,30">
            <!-- 反射/高光效果占位 -->
        </Grid>

        <!-- 顶部玻璃条（含标签页） -->
        <!-- 注意：这里我们将 TabControl 放在 Grid.Row="0" 并让它跨越到 Grid.Row="1"
             因为 TabControl 的内容区域需要显示在主内容区域 -->
        <Grid Grid.Row="0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="52"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 顶部背景 -->
            <Border Grid.Row="0" Background="{StaticResource AeroHeaderBrush}" BorderBrush="{StaticResource AeroBorderBrush}" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="195"/>
                        <!-- Logo区域宽度 -->
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <!-- 窗口控制按钮占位 -->
                    </Grid.ColumnDefinitions>

                    <!-- Logo/标题区域 -->
                    <!-- 独立高光层：Logo 区域 -->
                    <Border Grid.Column="0" Background="{StaticResource AeroHeaderOverlayBrush}" IsHitTestVisible="False"/>

                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="13,0,0,0" Height="42">
                        <Image
                               Height="42"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               UseLayoutRounding="True"
                               SnapsToDevicePixels="True"
                               Source="Resources/CascadeLogo.png"
                               Margin="0,0,13,0"/>
                        <TextBlock
                                   Text="Cascade"
                                   Foreground="{StaticResource AeroTextBrush}"
                                   FontSize="18"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold" FontFamily="Segoe UI"/>
                    </StackPanel>

                    <!-- 窗口控制按钮（如果需要可在此添加，或依赖系统窗口框架） -->
                    <!-- 独立高光层：窗口控制区域 -->
                    <Border Grid.Column="2" Background="{StaticResource AeroHeaderOverlayBrush}" IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <!-- 标签页控件 -->
            <!-- 跨越两行，Header在Row 0，Content在Row 1 -->
            <TabControl x:Name="MainTabControl"
                        Grid.Row="0" Grid.RowSpan="2"
                        Grid.ColumnSpan="3"
                        Style="{StaticResource AeroTabControlStyle}"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="0,-1,0,0"
                        Padding="208,0,0,0"
                        SelectedIndex="{Binding SelectedTabIndex}">
                <TabItem Style="{StaticResource AeroTabItemStyle}">
                    <TabItem.Header>
                        <TextBlock Text="{DynamicResource Tab_Media}" FontSize="15" Foreground="{StaticResource AeroTextBrush}"/>
                    </TabItem.Header>
                    <views:MediaPage DataContext="{Binding MediaVM}"/>
                </TabItem>
                <TabItem Style="{StaticResource AeroTabItemStyle}">
                    <TabItem.Header>
                        <TextBlock Text="{DynamicResource Tab_Operations}" FontSize="15" Foreground="{StaticResource AeroTextBrush}"/>
                    </TabItem.Header>
                    <views:OperationsPage DataContext="{Binding OperationsVM}"/>
                </TabItem>
                <TabItem Style="{StaticResource AeroTabItemStyle}">
                    <TabItem.Header>
                        <TextBlock Text="{DynamicResource Tab_Tasks}" FontSize="15" Foreground="{StaticResource AeroTextBrush}"/>
                    </TabItem.Header>
                    <views:TasksPage DataContext="{Binding TasksVM}"/>
                </TabItem>
                <TabItem Style="{StaticResource AeroTabItemStyle}">
                    <TabItem.Header>
                        <TextBlock Text="{DynamicResource Tab_Queue}" FontSize="15" Foreground="{StaticResource AeroTextBrush}"/>
                    </TabItem.Header>
                    <views:QueuePage DataContext="{Binding QueueVM}"/>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1" IsHitTestVisible="False">
            <!-- 欢迎页面 -->
            <Grid IsHitTestVisible="True">
                <views:WelcomePage DataContext="{Binding WelcomeVM}">
                    <views:WelcomePage.Style>
                        <Style TargetType="UserControl">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTabIndex}" Value="-1">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </views:WelcomePage.Style>
                </views:WelcomePage>
            </Grid>
        </Grid>

        <!-- 底部状态栏 -->
        <Grid Grid.Row="2">
            <!-- 正常背景层 -->
            <Border Background="{StaticResource AeroFooterBrush}" BorderBrush="{StaticResource AeroBorderBrush}" BorderThickness="0,1,0,0"/>
            
            <!-- 警告背景层（通过透明度控制显示） -->
            <Border x:Name="WarningBackgroundBorder" Background="{StaticResource AeroFooterWarningBrush}" BorderBrush="{StaticResource AeroBorderBrush}" BorderThickness="0,1,0,0" Opacity="0">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsWarningMode}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseInOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
            
            <!-- 内容层 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 内部高光线 -->
                <Border Grid.ColumnSpan="2" BorderBrush="#33FFFFFF" BorderThickness="0,1,0,0" VerticalAlignment="Top" Height="1"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <TextBlock Text="{DynamicResource Status_Label}" Foreground="{StaticResource AeroTextBrush}" Margin="0,0,20,0"/>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource AeroTextBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
