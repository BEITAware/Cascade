    <!--                                                                                               -->
    <!--                                  TextBox 隐式样式                                             -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    <!--                                                                                               -->
    <!--  此样式自动应用于所有 TextBox 控件，提供 Aero 风格的输入框外观。                                 -->
    <!--  设计来源：Designs/TextboxIdle.xaml, TextboxHover.xaml, TextboxActivated.xaml                  -->
    <!--                                                                                               -->
    <!--  设计说明：                                                                                    -->
    <!--      ● 闲置状态：圆角边框，底部青蓝色径向发光，白色渐变边框                                       -->
    <!--      ● 悬停状态：顶部增加白色高光层，边框更亮                                                    -->
    <!--      ● 激活状态：顶部和底部双重青蓝色发光，表示输入焦点                                          -->
    <!--      ● 边框：径向渐变从青蓝色(#5984AD)到白色                                                    -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->

    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CaretBrush" Value="White"/>
        <Setter Property="SelectionBrush" Value="#804B9DCC"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="MinHeight" Value="28"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <!-- 启用"首次点击全选"行为：点击一次全选，点击两次定位光标 -->
        <Setter Property="helpers:TextBoxBehaviors.SelectAllOnFirstClick" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Grid>
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        <!-- 闲置状态 - 基于 TextboxIdle.xaml                                          -->
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        
                        <!-- 闲置状态：主背景层 - 底部青蓝色径向发光填充 -->
                        <Border x:Name="IdleBackground" CornerRadius="4" BorderThickness="1">
                            <Border.BorderBrush>
                                <RadialGradientBrush RadiusX="1.176" RadiusY="0.666" Center="0.5,1.106" GradientOrigin="0.5,1.106">
                                    <GradientStop Color="#FF5984AD" Offset="0"/>
                                    <GradientStop Color="#FFFFFFFF" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.BorderBrush>
                            <Border.Background>
                                <RadialGradientBrush RadiusX="1.182" RadiusY="0.679" Center="0.5,1.119" GradientOrigin="0.5,1.119">
                                    <GradientStop Color="#FF4588BD" Offset="0"/>
                                    <GradientStop Color="#001AD5FF" Offset="0.381"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        <!-- 悬停状态 - 基于 TextboxHover.xaml                                         -->
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        
                        <!-- 悬停状态：顶部白色高光层 -->
                        <Border x:Name="HoverHighlight" Opacity="0" CornerRadius="4" BorderThickness="1" IsHitTestVisible="False">
                            <Border.BorderBrush>
                                <RadialGradientBrush RadiusX="3.59" RadiusY="1.925" Center="0.5,-0.072" GradientOrigin="0.5,-0.072">
                                    <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                    <GradientStop Color="#34C3EFFF" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.BorderBrush>
                            <Border.Background>
                                <RadialGradientBrush RadiusX="3.59" RadiusY="1.925" Center="0.5,-0.072" GradientOrigin="0.5,-0.072">
                                    <GradientStop Color="#44FFFFFF" Offset="0"/>
                                    <GradientStop Color="#0BFFFFFF" Offset="0.345"/>
                                    <GradientStop Color="#01FFFFFF" Offset="0.351"/>
                                    <GradientStop Color="#00FFFFFF" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 悬停状态：主背景层 - 顶部青蓝色径向发光 -->
                        <Border x:Name="HoverBackground" Opacity="0" CornerRadius="4" BorderThickness="1" IsHitTestVisible="False">
                            <Border.BorderBrush>
                                <RadialGradientBrush RadiusX="1.176" RadiusY="0.666" Center="0.5,-0.187" GradientOrigin="0.5,-0.187">
                                    <GradientStop Color="#FF5984AD" Offset="0"/>
                                    <GradientStop Color="#FFFFFFFF" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.BorderBrush>
                            <Border.Background>
                                <RadialGradientBrush RadiusX="1.182" RadiusY="0.679" Center="0.5,-0.201" GradientOrigin="0.5,-0.201">
                                    <GradientStop Color="#384588BD" Offset="0"/>
                                    <GradientStop Color="#001AD5FF" Offset="0.691"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        <!-- 激活/聚焦状态 - 基于 TextboxActivated.xaml                                 -->
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        
                        <!-- 激活状态：顶部青蓝色径向发光（增强范围和强度） -->
                        <Border x:Name="FocusedTopGlow" Opacity="0" CornerRadius="4" BorderThickness="1" IsHitTestVisible="False">
                            <Border.BorderBrush>
                                <RadialGradientBrush RadiusX="1.5" RadiusY="0.9" Center="0.5,-0.2" GradientOrigin="0.5,-0.2">
                                    <GradientStop Color="#FF6A9FC0" Offset="0"/>
                                    <GradientStop Color="#FFFFFFFF" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.BorderBrush>
                            <Border.Background>
                                <RadialGradientBrush RadiusX="1.5" RadiusY="0.9" Center="0.5,-0.2" GradientOrigin="0.5,-0.2">
                                    <GradientStop Color="#FF5A9ED0" Offset="0"/>
                                    <GradientStop Color="#001AD5FF" Offset="0.55"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 激活状态：底部青蓝色径向发光（增强范围和强度） -->
                        <Border x:Name="FocusedBottomGlow" Opacity="0" CornerRadius="4" BorderThickness="1" IsHitTestVisible="False">
                            <Border.BorderBrush>
                                <RadialGradientBrush RadiusX="1.5" RadiusY="0.9" Center="0.5,1.2" GradientOrigin="0.5,1.2">
                                    <GradientStop Color="#FF6A9FC0" Offset="0"/>
                                    <GradientStop Color="#FFFFFFFF" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.BorderBrush>
                            <Border.Background>
                                <RadialGradientBrush RadiusX="1.5" RadiusY="0.9" Center="0.5,1.2" GradientOrigin="0.5,1.2">
                                    <GradientStop Color="#FF5A9ED0" Offset="0"/>
                                    <GradientStop Color="#001AD5FF" Offset="0.55"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        <!-- 内阴影效果 - 使用传统渐变实现                                              -->
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        
                        <!-- 顶部内阴影 -->
                        <Border CornerRadius="4,4,0,0" Height="8" VerticalAlignment="Top" IsHitTestVisible="False">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#40000000" Offset="0"/>
                                    <GradientStop Color="#00000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 左侧内阴影 -->
                        <Border CornerRadius="4,0,0,4" Width="6" HorizontalAlignment="Left" IsHitTestVisible="False">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#25000000" Offset="0"/>
                                    <GradientStop Color="#00000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 右侧内阴影 -->
                        <Border CornerRadius="0,4,4,0" Width="6" HorizontalAlignment="Right" IsHitTestVisible="False">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                                    <GradientStop Color="#25000000" Offset="0"/>
                                    <GradientStop Color="#00000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 文本内容层 - 独立矩形，不受其他层级影响 -->
                        <Border Margin="1" CornerRadius="4" Background="Transparent">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0,0"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden">
                                <ScrollViewer.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="2" ShadowDepth="1" Opacity="0.3"/>
                                </ScrollViewer.Effect>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- 悬停状态触发器 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard x:Name="HoverEnterStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="HoverHighlight" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="HoverBackground" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="HoverEnterStoryboard"/>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="HoverHighlight" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="HoverBackground" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <!-- 聚焦状态触发器 -->
                        <Trigger Property="IsFocused" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard x:Name="FocusEnterStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IdleBackground" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="HoverHighlight" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="HoverBackground" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="FocusedTopGlow" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="FocusedBottomGlow" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="FocusEnterStoryboard"/>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IdleBackground" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="FocusedTopGlow" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="FocusedBottomGlow" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <!-- 键盘聚焦状态触发器 -->
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="IdleBackground" Property="Opacity" Value="0"/>
                            <Setter TargetName="FocusedTopGlow" Property="Opacity" Value="1"/>
                            <Setter TargetName="FocusedBottomGlow" Property="Opacity" Value="1"/>
                        </Trigger>
                        
                        <!-- 禁用状态触发器 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                        
                        <!-- 只读状态触发器 -->
                        <Trigger Property="IsReadOnly" Value="True">
                            <Setter Property="Opacity" Value="0.7"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    <!--                                                                                               -->
    <!--                                  Button 隐式样式                                              -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    <!--                                                                                               -->
    <!--  此样式自动应用于所有 Button 控件，提供 Aero 风格的按钮外观。                                    -->
    <!--  设计来源：Designs/ImplicitButtonIdle.xaml, ImplicitButtonHover.xaml, ImplicitButtonPressed.xaml -->
    <!--                                                                                               -->
    <!--  设计说明：                                                                                    -->
    <!--      ● 闲置状态：深蓝渐变背景，底部青色径向发光                                                  -->
    <!--      ● 悬停状态：更亮的蓝色渐变，顶部和底部双重发光                                              -->
    <!--      ● 按下状态：更深的蓝色渐变，带内阴影效果                                                    -->
    <!--      ● 边框：半透明青蓝色 (#67BBDDF2)                                                          -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->

    <Style TargetType="{x:Type Button}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="MinHeight" Value="28"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        <!-- 闲置状态 - 基于 ImplicitButtonIdle.xaml                                   -->
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        
                        <!-- 闲置状态：主背景层 - 深蓝渐变 -->
                        <Border x:Name="IdleBackground" CornerRadius="4" BorderThickness="2" BorderBrush="#67BBDDF2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0.5,-0.887" EndPoint="0.5,1.887">
                                    <GradientStop Color="#FF637495" Offset="0.308"/>
                                    <GradientStop Color="#FF384D75" Offset="0.489"/>
                                    <GradientStop Color="#FF223761" Offset="0.495"/>
                                    <GradientStop Color="#FF284D7E" Offset="0.681"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 闲置状态：底部青色径向发光 -->
                        <Border x:Name="IdleGlow" CornerRadius="4" IsHitTestVisible="False">
                            <Border.Background>
                                <RadialGradientBrush RadiusX="0.67" RadiusY="1.43" Center="0.5,1.32" GradientOrigin="0.5,1.32">
                                    <GradientStop Color="#FF4B9DCC" Offset="0.231"/>
                                    <GradientStop Color="#013C4F73" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        <!-- 悬停状态 - 基于 ImplicitButtonHover.xaml                                  -->
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        
                        <!-- 悬停状态：主背景层 - 更亮的蓝色渐变 -->
                        <Border x:Name="HoverBackground" Opacity="0" CornerRadius="4" BorderThickness="2" BorderBrush="#67BBDDF2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0.5,-0.887" EndPoint="0.5,1.887">
                                    <GradientStop Color="#FF7387AF" Offset="0.308"/>
                                    <GradientStop Color="#FF405886" Offset="0.489"/>
                                    <GradientStop Color="#FF284276" Offset="0.495"/>
                                    <GradientStop Color="#FF295691" Offset="0.681"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 悬停状态：底部青色径向发光 -->
                        <Border x:Name="HoverBottomGlow" Opacity="0" CornerRadius="4" IsHitTestVisible="False">
                            <Border.Background>
                                <RadialGradientBrush RadiusX="0.56" RadiusY="1.0" Center="0.5,1.23" GradientOrigin="0.5,1.23">
                                    <GradientStop Color="#FF4B9DCC" Offset="0.231"/>
                                    <GradientStop Color="#013C4F73" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 悬停状态：顶部青色径向发光 -->
                        <Border x:Name="HoverTopGlow" Opacity="0" CornerRadius="4" IsHitTestVisible="False">
                            <Border.Background>
                                <RadialGradientBrush RadiusX="0.93" RadiusY="0.79" Center="0.5,-0.2" GradientOrigin="0.5,-0.2">
                                    <GradientStop Color="#FF4B9DCC" Offset="0.231"/>
                                    <GradientStop Color="#013C4F73" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        <!-- 按下状态 - 基于 ImplicitButtonPressed.xaml + 内阴影                       -->
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        
                        <!-- 按下状态：主背景层 - 更深的蓝色渐变 -->
                        <Border x:Name="PressedBackground" Opacity="0" CornerRadius="4" BorderThickness="2" BorderBrush="#67BBDDF2">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0.5,-0.887" EndPoint="0.5,1.887">
                                    <GradientStop Color="#FF324F80" Offset="0.308"/>
                                    <GradientStop Color="#FF142E74" Offset="0.489"/>
                                    <GradientStop Color="#FF09246B" Offset="0.501"/>
                                    <GradientStop Color="#FF0A348A" Offset="0.681"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 按下状态：底部蓝紫色径向发光 -->
                        <Border x:Name="PressedGlow" Opacity="0" CornerRadius="4" IsHitTestVisible="False">
                            <Border.Background>
                                <RadialGradientBrush RadiusX="0.69" RadiusY="0.55" Center="0.5,1.12" GradientOrigin="0.5,1.12">
                                    <GradientStop Color="#FF3A5AC6" Offset="0.213"/>
                                    <GradientStop Color="#013C4F73" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 按下状态：内阴影效果 - 模拟按下凹陷感 -->
                        <Border x:Name="PressedInnerShadow" Opacity="0" CornerRadius="4" IsHitTestVisible="False">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#80000000" Offset="0"/>
                                    <GradientStop Color="#40000000" Offset="0.15"/>
                                    <GradientStop Color="#00000000" Offset="0.4"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 按下状态：左右内阴影 -->
                        <Border x:Name="PressedSideShadow" Opacity="0" CornerRadius="4" IsHitTestVisible="False">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                    <GradientStop Color="#50000000" Offset="0"/>
                                    <GradientStop Color="#00000000" Offset="0.1"/>
                                    <GradientStop Color="#00000000" Offset="0.9"/>
                                    <GradientStop Color="#50000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 内容呈现器 -->
                        <ContentPresenter x:Name="ContentPresenter"
                                          Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          RecognizesAccessKey="True">
                            <ContentPresenter.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                            </ContentPresenter.Effect>
                        </ContentPresenter>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- 悬停状态触发器 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard x:Name="HoverEnterStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IdleBackground" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="IdleGlow" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="HoverBackground" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="HoverBottomGlow" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="HoverTopGlow" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <!-- 停止进入动画，防止动画冲突导致状态卡住 -->
                                <StopStoryboard BeginStoryboardName="HoverEnterStoryboard"/>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IdleBackground" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="IdleGlow" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="HoverBackground" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="HoverBottomGlow" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="HoverTopGlow" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <!-- 按下状态触发器 -->
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard x:Name="PressedEnterStoryboard">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IdleBackground" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.08"/>
                                        <DoubleAnimation Storyboard.TargetName="IdleGlow" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.08"/>
                                        <DoubleAnimation Storyboard.TargetName="HoverBackground" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.08"/>
                                        <DoubleAnimation Storyboard.TargetName="HoverBottomGlow" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.08"/>
                                        <DoubleAnimation Storyboard.TargetName="HoverTopGlow" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.08"/>
                                        <DoubleAnimation Storyboard.TargetName="PressedBackground" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.08"/>
                                        <DoubleAnimation Storyboard.TargetName="PressedGlow" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.08"/>
                                        <DoubleAnimation Storyboard.TargetName="PressedInnerShadow" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.08"/>
                                        <DoubleAnimation Storyboard.TargetName="PressedSideShadow" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.08"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <!-- 先停止进入动画，防止动画冲突 -->
                                <StopStoryboard BeginStoryboardName="PressedEnterStoryboard"/>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- 清除 Pressed 状态 -->
                                        <DoubleAnimation Storyboard.TargetName="PressedBackground" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="PressedGlow" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="PressedInnerShadow" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="PressedSideShadow" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <!-- 使用 MultiTrigger 处理：按下释放后仍在悬停状态 -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsPressed" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="HoverBackground" Property="Opacity" Value="1"/>
                            <Setter TargetName="HoverBottomGlow" Property="Opacity" Value="1"/>
                            <Setter TargetName="HoverTopGlow" Property="Opacity" Value="1"/>
                            <Setter TargetName="IdleBackground" Property="Opacity" Value="0"/>
                            <Setter TargetName="IdleGlow" Property="Opacity" Value="0"/>
                        </MultiTrigger>
                        
                        <!-- 禁用状态触发器 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    <!--                                                                                               -->
    <!--                                  ComboBox 隐式样式                                            -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    <!--                                                                                               -->
    <!--  此样式自动应用于所有 ComboBox 控件，提供 Aero 风格的下拉框外观。                                -->
    <!--  设计来源：Designs/DropDownIdle.xaml, DropDownHover.xaml, DropDownPressed.xaml                 -->
    <!--                                                                                               -->
    <!--  设计说明：                                                                                    -->
    <!--      ● 闲置状态：深蓝渐变背景，带边框                                                           -->
    <!--      ● 悬停状态：蓝色高光效果                                                                  -->
    <!--      ● 按下状态：更深的蓝色渐变                                                                 -->
    <!--      ● 下拉框：Aero 玻璃质感背景，深色渐变 + 高光边框                                            -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->

    <!-- ComboBox 下拉框项悬停背景 -->
    <LinearGradientBrush x:Key="ComboBoxItemHoverBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#60A0D0FF" Offset="0"/>
        <GradientStop Color="#3060A0D0" Offset="0.5"/>
        <GradientStop Color="#4080C0F0" Offset="1"/>
    </LinearGradientBrush>

    <!-- ComboBox 下拉框项选中背景 -->
    <LinearGradientBrush x:Key="ComboBoxItemSelectedBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#A0C0E8FF" Offset="0"/>
        <GradientStop Color="#6080B0E0" Offset="0.5"/>
        <GradientStop Color="#80A0D0FF" Offset="1"/>
    </LinearGradientBrush>

    <!-- ComboBoxItem 隐式样式 -->
    <Style TargetType="{x:Type ComboBoxItem}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                    <Grid>
                        <!-- 悬停/选中背景 -->
                        <Border x:Name="Bg" 
                                Background="Transparent" 
                                CornerRadius="2"
                                BorderThickness="1"
                                BorderBrush="Transparent"/>
                        <!-- 顶部高光 -->
                        <Border x:Name="TopHighlight"
                                CornerRadius="2,2,0,0"
                                Height="12"
                                VerticalAlignment="Top"
                                Opacity="0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#40FFFFFF" Offset="0"/>
                                    <GradientStop Color="#00FFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="{StaticResource ComboBoxItemHoverBrush}"/>
                            <Setter TargetName="Bg" Property="BorderBrush" Value="#5090C0E0"/>
                            <Setter TargetName="TopHighlight" Property="Opacity" Value="0.6"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="{StaticResource ComboBoxItemSelectedBrush}"/>
                            <Setter TargetName="Bg" Property="BorderBrush" Value="#80A0D0FF"/>
                            <Setter TargetName="TopHighlight" Property="Opacity" Value="0.8"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ComboBox}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="5,2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ComboBox}">
                    <Grid>
                        <ToggleButton Name="ToggleButton"
                                      Focusable="false"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      ClickMode="Press">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Grid Background="Transparent">
                                        <!-- 基础背景层 - 始终可见 -->
                                        <Border x:Name="IdleBackground" CornerRadius="3" BorderThickness="1" BorderBrush="#FF82869E">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#E0183858" Offset="0"/>
                                                    <GradientStop Color="#D0285878" Offset="0.15"/>
                                                    <GradientStop Color="#C0306888" Offset="0.5"/>
                                                    <GradientStop Color="#D0285878" Offset="0.85"/>
                                                    <GradientStop Color="#E0183858" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        
                                        <!-- 闲置状态顶部玻璃高光 -->
                                        <Border CornerRadius="3,3,0,0" Height="12" VerticalAlignment="Top" IsHitTestVisible="False">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#30FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#10FFFFFF" Offset="0.5"/>
                                                    <GradientStop Color="#00FFFFFF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        
                                        <!-- 闲置状态底部发光 -->
                                        <Border CornerRadius="0,0,3,3" Height="10" VerticalAlignment="Bottom" IsHitTestVisible="False">
                                            <Border.Background>
                                                <RadialGradientBrush RadiusX="0.8" RadiusY="2" Center="0.5,1" GradientOrigin="0.5,1">
                                                    <GradientStop Color="#4060B0F0" Offset="0"/>
                                                    <GradientStop Color="#0060B0F0" Offset="1"/>
                                                </RadialGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        
                                        <!-- 闲置状态边框高光 -->
                                        <Border CornerRadius="3" BorderThickness="1" IsHitTestVisible="False">
                                            <Border.BorderBrush>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#50FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#20FFFFFF" Offset="0.5"/>
                                                    <GradientStop Color="#3080B0D0" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.BorderBrush>
                                        </Border>
                                        
                                        <!-- 悬停状态背景 -->
                                        <Border x:Name="HoverBackground" Opacity="0" CornerRadius="3" BorderThickness="1" BorderBrush="#67BBDDF2">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#CD6E869C" Offset="0"/>
                                                    <GradientStop Color="#CD3A576E" Offset="0.35"/>
                                                    <GradientStop Color="#CD162D41" Offset="0.5"/>
                                                    <GradientStop Color="#CB4C87AF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        
                                        <!-- 悬停状态顶部高光 -->
                                        <Border x:Name="HoverTopHighlight" Opacity="0" CornerRadius="3,3,0,0" Height="14" VerticalAlignment="Top" IsHitTestVisible="False">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#50FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#20FFFFFF" Offset="0.5"/>
                                                    <GradientStop Color="#00FFFFFF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        
                                        <!-- 按下状态背景 -->
                                        <Border x:Name="PressedBackground" Opacity="0" CornerRadius="3" BorderThickness="1" BorderBrush="#67BBDDF2">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#FF87B0CA" Offset="0"/>
                                                    <GradientStop Color="#FF496A89" Offset="0.45"/>
                                                    <GradientStop Color="#FF335876" Offset="0.5"/>
                                                    <GradientStop Color="#FF559EBA" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        
                                        <!-- 按下状态顶部高光 -->
                                        <Border x:Name="PressedTopHighlight" Opacity="0" CornerRadius="3,3,0,0" Height="10" VerticalAlignment="Top" IsHitTestVisible="False">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#60FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#20FFFFFF" Offset="0.6"/>
                                                    <GradientStop Color="#00FFFFFF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        
                                        <!-- 下拉箭头 -->
                                        <Path Data="M 0 0 L 4 4 L 8 0 Z" Fill="White" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0" IsHitTestVisible="False">
                                            <Path.Effect>
                                                <DropShadowEffect Color="#000000" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                                            </Path.Effect>
                                        </Path>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="HoverBackground" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                                        <DoubleAnimation Storyboard.TargetName="HoverTopHighlight" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="HoverBackground" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                                        <DoubleAnimation Storyboard.TargetName="HoverTopHighlight" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="PressedBackground" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.1"/>
                                                        <DoubleAnimation Storyboard.TargetName="PressedTopHighlight" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.1"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="PressedBackground" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                                        <DoubleAnimation Storyboard.TargetName="PressedTopHighlight" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>

                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          IsHitTestVisible="False"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>
                        
                        <!-- 
                            ═══════════════════════════════════════════════════════════════════════════
                            [已禁用] 基于 Windows API 的模糊效果尝试
                            原因：SetWindowCompositionAttribute 在 Popup 上效果不稳定
                            保留代码以供将来参考：helpers:PopupBlurHelper.IsBlurEnabled="True"
                            ═══════════════════════════════════════════════════════════════════════════
                        -->
                        <Popup x:Name="PART_Popup" 
                               AllowsTransparency="True" 
                               IsOpen="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                               Placement="Bottom" 
                               PopupAnimation="Slide">
                            <Grid MaxHeight="{TemplateBinding MaxDropDownHeight}" MinWidth="{TemplateBinding ActualWidth}" Margin="2">
                                <!-- 阴影层 -->
                                <Border CornerRadius="4" Margin="-2">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="2" Opacity="0.6"/>
                                    </Border.Effect>
                                    <Border.Background>
                                        <SolidColorBrush Color="#01000000"/>
                                    </Border.Background>
                                </Border>
                                
                                <!-- 主背景层 - Aero 深色玻璃渐变 -->
                                <Border x:Name="DropDownBorder" CornerRadius="4" Opacity="0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#F0102030" Offset="0"/>
                                            <GradientStop Color="#F0183050" Offset="0.3"/>
                                            <GradientStop Color="#F0102840" Offset="0.7"/>
                                            <GradientStop Color="#F0081828" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="Border.Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                </Border>
                                
                                <!-- 顶部高光层 - 模拟玻璃反光 -->
                                <Border CornerRadius="4,4,0,0" Height="20" VerticalAlignment="Top" IsHitTestVisible="False">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#25FFFFFF" Offset="0"/>
                                            <GradientStop Color="#10FFFFFF" Offset="0.5"/>
                                            <GradientStop Color="#00FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                
                                <!-- 底部发光层 - Aero 特征性的底部青色光晕 -->
                                <Border CornerRadius="0,0,4,4" Height="30" VerticalAlignment="Bottom" IsHitTestVisible="False">
                                    <Border.Background>
                                        <RadialGradientBrush RadiusX="0.8" RadiusY="1.5" Center="0.5,1" GradientOrigin="0.5,1">
                                            <GradientStop Color="#3040A0E0" Offset="0"/>
                                            <GradientStop Color="#0040A0E0" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                </Border>
                                
                                <!-- 边框层 - Aero 玻璃边框效果 -->
                                <Border CornerRadius="4" BorderThickness="1" IsHitTestVisible="False">
                                    <Border.BorderBrush>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#60FFFFFF" Offset="0"/>
                                            <GradientStop Color="#30FFFFFF" Offset="0.3"/>
                                            <GradientStop Color="#20FFFFFF" Offset="0.7"/>
                                            <GradientStop Color="#4080C0E0" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.BorderBrush>
                                </Border>
                                
                                <!-- 内容区域 -->
                                <ScrollViewer Margin="4,6">
                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                </ScrollViewer>
                            </Grid>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

