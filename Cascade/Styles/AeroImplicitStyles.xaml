    <!--                                                                                               -->
    <!--                                  ScrollBar 隐式样式                                           -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    <!--                                                                                               -->
    <!--  此样式自动应用于所有 ScrollBar 控件，包括：                                                    -->
    <!--      ● ScrollViewer 内部自动创建的滚动条                                                       -->
    <!--      ● ListBox、ListView、DataGrid 等控件内部的滚动条                                          -->
    <!--      ● 独立使用的 ScrollBar 控件                                                               -->
    <!--                                                                                               -->
    <!--  设计说明：                                                                                    -->
    <!--      ● 轨道背景：半透明深青色 (#B2485166)，带左侧高光边框                                        -->
    <!--      ● 滑块：深灰蓝渐变，圆角 4px，带高光边框                                                    -->
    <!--      ● 两端按钮：白色三角形箭头，悬停/按下时变灰                                                 -->
    <!--      ● 支持垂直和水平两种方向（通过 Style.Triggers 切换模板）                                    -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    
    <Style TargetType="{x:Type ScrollBar}">
        <!-- 禁用触控笔的按住手势，防止干扰滚动操作 -->
        <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
        <!-- 禁用触控笔的轻拂手势 -->
        <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
        <!-- 背景透明，由模板内的 Border 提供实际背景 -->
        <Setter Property="Background" Value="Transparent"/>
        <!-- 前景色使用系统默认（实际未使用，因为箭头颜色在模板中硬编码为白色） -->
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
        <!-- 垂直滚动条宽度 -->
        <Setter Property="Width" Value="16"/>
        <Setter Property="MinWidth" Value="16"/>
        
        <!-- 垂直滚动条模板 -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollBar}">
                    <Grid x:Name="Bg" SnapsToDevicePixels="true">
                        <Grid.RowDefinitions>
                            <!-- 顶部按钮区域 -->
                            <RowDefinition MaxHeight="{DynamicResource {x:Static SystemParameters.VerticalScrollBarButtonHeightKey}}"/>
                            <!-- 滑块轨道区域 -->
                            <RowDefinition Height="*"/>
                            <!-- 底部按钮区域 -->
                            <RowDefinition MaxHeight="{DynamicResource {x:Static SystemParameters.VerticalScrollBarButtonHeightKey}}"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 
                            轨道背景层
                            设计来源：Designs/ScrollBarTrack.xaml
                            颜色：半透明深青色，左侧有高光边框模拟玻璃边缘
                        -->
                        <Border Grid.RowSpan="3"
                                Background="#B2485166"
                                BorderThickness="1,0,0,0">
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#0FFFFFFF" Offset="0"/>
                                    <GradientStop Color="#7FFFFFFF" Offset="0.1"/>
                                    <GradientStop Color="#00FFFFFF" Offset="0.2"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                        </Border>

                        <!-- 向上滚动按钮 -->
                        <RepeatButton Command="{x:Static ScrollBar.LineUpCommand}"
                                      IsEnabled="{TemplateBinding IsEnabled}"
                                      Style="{StaticResource ScrollBarPageButtonStyle}"
                                      Content="M 0 4 L 4 0 L 8 4 Z"
                                      Height="16"/>
                        
                        <!-- 滑块轨道 -->
                        <Track x:Name="PART_Track"
                               IsDirectionReversed="true"
                               IsEnabled="{TemplateBinding IsEnabled}"
                               Grid.Row="1">
                            <!-- 滑块上方的可点击区域（向上翻页） -->
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="{x:Static ScrollBar.PageUpCommand}"
                                              Style="{StaticResource ScrollBarPageButtonStyle}"
                                              Content=""
                                              Background="Transparent"
                                              Opacity="0"/>
                            </Track.DecreaseRepeatButton>
                            <!-- 滑块本体 -->
                            <Track.Thumb>
                                <Thumb Style="{StaticResource ScrollBarThumbStyle}"
                                       MinHeight="48"/>
                            </Track.Thumb>
                            <!-- 滑块下方的可点击区域（向下翻页） -->
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="{x:Static ScrollBar.PageDownCommand}"
                                              Style="{StaticResource ScrollBarPageButtonStyle}"
                                              Content=""
                                              Background="Transparent"
                                              Opacity="0"/>
                            </Track.IncreaseRepeatButton>
                        </Track>
                        
                        <!-- 向下滚动按钮 -->
                        <RepeatButton Command="{x:Static ScrollBar.LineDownCommand}"
                                      IsEnabled="{TemplateBinding IsEnabled}"
                                      Grid.Row="2"
                                      Style="{StaticResource ScrollBarPageButtonStyle}"
                                      Content="M 0 0 L 4 4 L 8 0 Z"
                                      Height="16"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
        <!-- 水平滚动条触发器 -->
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <!-- 水平滚动条尺寸属性 -->
                <Setter Property="Width" Value="Auto"/>
                <Setter Property="MinWidth" Value="0"/>
                <Setter Property="Height" Value="16"/>
                <Setter Property="MinHeight" Value="16"/>
                
                <!-- 水平滚动条模板 -->
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid x:Name="Bg" SnapsToDevicePixels="true">
                                <Grid.ColumnDefinitions>
                                    <!-- 左侧按钮区域 -->
                                    <ColumnDefinition MaxWidth="{DynamicResource {x:Static SystemParameters.HorizontalScrollBarButtonWidthKey}}"/>
                                    <!-- 滑块轨道区域 -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- 右侧按钮区域 -->
                                    <ColumnDefinition MaxWidth="{DynamicResource {x:Static SystemParameters.HorizontalScrollBarButtonWidthKey}}"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- 
                                    水平轨道背景层
                                    与垂直版本相同的设计，但边框在顶部
                                -->
                                <Border Grid.ColumnSpan="3"
                                        Background="#B2485166"
                                        BorderThickness="0,1,0,0">
                                    <Border.BorderBrush>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#0FFFFFFF" Offset="0"/>
                                            <GradientStop Color="#7FFFFFFF" Offset="0.1"/>
                                            <GradientStop Color="#00FFFFFF" Offset="0.2"/>
                                        </LinearGradientBrush>
                                    </Border.BorderBrush>
                                </Border>

                                <!-- 向左滚动按钮 -->
                                <RepeatButton Command="{x:Static ScrollBar.LineLeftCommand}"
                                              IsEnabled="{TemplateBinding IsEnabled}"
                                              Style="{StaticResource ScrollBarPageButtonStyle}"
                                              Content="M 4 0 L 0 4 L 4 8 Z"
                                              Width="16"/>
                                
                                <!-- 滑块轨道 -->
                                <Track x:Name="PART_Track"
                                       Grid.Column="1"
                                       IsEnabled="{TemplateBinding IsEnabled}">
                                    <!-- 滑块左侧的可点击区域（向左翻页） -->
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="{x:Static ScrollBar.PageLeftCommand}"
                                                      Style="{StaticResource ScrollBarPageButtonStyle}"
                                                      Content=""
                                                      Background="Transparent"
                                                      Opacity="0"/>
                                    </Track.DecreaseRepeatButton>
                                    <!-- 滑块本体（使用水平专用样式） -->
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource ScrollBarThumbStyleHorizontal}"
                                               MinWidth="48"/>
                                    </Track.Thumb>
                                    <!-- 滑块右侧的可点击区域（向右翻页） -->
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="{x:Static ScrollBar.PageRightCommand}"
                                                      Style="{StaticResource ScrollBarPageButtonStyle}"
                                                      Content=""
                                                      Background="Transparent"
                                                      Opacity="0"/>
                                    </Track.IncreaseRepeatButton>
                                </Track>
                                
                                <!-- 向右滚动按钮 -->
                                <RepeatButton Command="{x:Static ScrollBar.LineRightCommand}"
                                              IsEnabled="{TemplateBinding IsEnabled}"
                                              Grid.Column="2"
                                              Style="{StaticResource ScrollBarPageButtonStyle}"
                                              Content="M 0 0 L 4 4 L 0 8 Z"
                                              Width="16"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

