<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 滚动条两端按钮的样式 (白色三角形) -->
    <Style x:Key="ScrollBarPageButtonStyle" TargetType="{x:Type RepeatButton}">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="IsTabStop" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Grid Background="{TemplateBinding Background}">
                        <Path x:Name="Arrow"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Fill="White"
                              Data="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="Arrow" Property="Fill" Value="#FFCCCCCC" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="Arrow" Property="Fill" Value="#FF999999" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 滚动条滑块 (Thumb) 的样式 -->
    <Style x:Key="ScrollBarThumbStyle" TargetType="{x:Type Thumb}">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="IsTabStop" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <!-- 模拟 Designs/ScrollBarThumb.xaml 的效果 -->
                    <Border x:Name="ThumbBorder"
                            CornerRadius="4"
                            BorderThickness="1"
                            VerticalAlignment="Stretch">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Color="#0AFFFFFF" Offset="0"/>
                                <GradientStop Color="#9AFFFFFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Color="#FF707987" Offset="0"/>
                                <GradientStop Color="#FF505E6C" Offset="0.448"/>
                                <GradientStop Color="#FF445060" Offset="0.525"/>
                                <GradientStop Color="#FF30424F" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 水平滚动条滑块样式 -->
    <Style x:Key="ScrollBarThumbStyleHorizontal" TargetType="{x:Type Thumb}">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="IsTabStop" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border x:Name="ThumbBorder"
                            CornerRadius="4"
                            BorderThickness="1">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#0AFFFFFF" Offset="0"/>
                                <GradientStop Color="#9AFFFFFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#FF707987" Offset="0"/>
                                <GradientStop Color="#FF505E6C" Offset="0.448"/>
                                <GradientStop Color="#FF445060" Offset="0.525"/>
                                <GradientStop Color="#FF30424F" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    <!--                                                                                               -->
    <!--  注意：ScrollBar 的隐式样式已迁移至 AeroImplicitStyles.xaml                                    -->
    <!--                                                                                               -->
    <!--  本文件现仅包含以下辅助显式样式（带 x:Key）：                                                   -->
    <!--      ● ScrollBarPageButtonStyle      - 滚动条两端按钮样式                                      -->
    <!--      ● ScrollBarThumbStyle           - 垂直滚动条滑块样式                                      -->
    <!--      ● ScrollBarThumbStyleHorizontal - 水平滚动条滑块样式                                      -->
    <!--                                                                                               -->
    <!--  这些样式被 AeroImplicitStyles.xaml 中的 ScrollBar 隐式样式引用。                              -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->

</ResourceDictionary>