    <!--                                                                                               -->
    <!--                                  CheckBox 隐式样式                                            -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    <!--                                                                                               -->
    <!--  此样式自动应用于所有 CheckBox 控件，提供 Aero 风格的复选框外观。                                -->
    <!--  设计来源：Designs/CheckboxBackground.xaml, RadioButtonInnerCircle.xaml (对勾样式参考)          -->
    <!--                                                                                               -->
    <!--  设计说明：                                                                                    -->
    <!--      ● 背景：圆角矩形深蓝渐变，带高光边框                                                       -->
    <!--      ● 选中状态：对勾使用与 RadioButton 内圆相同的径向渐变，带 DropShadow 发光效果               -->
    <!--      ● 悬停状态：边框和背景增亮                                                                 -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->

    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="4,0,0,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- CheckBox 方形背景区域 -->
                        <Grid Width="16" Height="16" VerticalAlignment="Center">
                            <!-- 背景层 - 基于 CheckboxBackground.xaml -->
                            <Border x:Name="Background" CornerRadius="2" BorderThickness="1">
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0.5,-1.45" EndPoint="0.5,1.73">
                                        <GradientStop Color="#CCD9E7F4" Offset="0"/>
                                        <GradientStop Color="#CC7CBEEA" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,-1.46" EndPoint="0.5,1.74">
                                        <GradientStop Color="#CC9CB3C8" Offset="0.473"/>
                                        <GradientStop Color="#CC3A576E" Offset="0.593"/>
                                        <GradientStop Color="#CC162D41" Offset="0.623"/>
                                        <GradientStop Color="#CC4C87AF" Offset="0.798"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            
                            <!-- 悬停状态背景 -->
                            <Border x:Name="HoverBackground" Opacity="0" CornerRadius="2" BorderThickness="1">
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0.5,-1.45" EndPoint="0.5,1.73">
                                        <GradientStop Color="#FFE9F7FF" Offset="0"/>
                                        <GradientStop Color="#FF8CCEFA" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,-1.46" EndPoint="0.5,1.74">
                                        <GradientStop Color="#FFACC3D8" Offset="0.473"/>
                                        <GradientStop Color="#FF4A677E" Offset="0.593"/>
                                        <GradientStop Color="#FF263D51" Offset="0.623"/>
                                        <GradientStop Color="#FF5C97BF" Offset="0.798"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            
                            <!-- 选中状态对勾 - 参考 RadioButtonInnerCircle.xaml 的样式 + DropShadow -->
                            <Path x:Name="CheckMark" 
                                  Data="M 2,7 L 6,11 L 13,3"
                                  StrokeThickness="2"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  Opacity="0"
                                  Margin="0,-1,0,0">
                                <Path.Stroke>
                                    <RadialGradientBrush RadiusX="1.15" RadiusY="1.15" Center="0.5,1.15" GradientOrigin="0.5,1.15">
                                        <GradientStop Color="#FF8AE0FF" Offset="0.093"/>
                                        <GradientStop Color="#FF35A6E6" Offset="0.645"/>
                                        <GradientStop Color="#FF4DA6E4" Offset="0.712"/>
                                        <GradientStop Color="#FFAED3F4" Offset="0.942"/>
                                    </RadialGradientBrush>
                                </Path.Stroke>
                                <!-- DropShadow 效果：Softness=2, Offset=0, Opacity=0.8, Color=#22657C -->
                                <Path.Effect>
                                    <DropShadowEffect Color="#22657C" BlurRadius="2" ShadowDepth="0" Opacity="0.8" Direction="315"/>
                                </Path.Effect>
                            </Path>
                            
                            <!-- 不确定状态标记 -->
                            <Border x:Name="IndeterminateMark"
                                    Width="8" Height="8"
                                    CornerRadius="1"
                                    Opacity="0">
                                <Border.Background>
                                    <RadialGradientBrush RadiusX="1.15" RadiusY="1.15" Center="0.5,1.15" GradientOrigin="0.5,1.15">
                                        <GradientStop Color="#FF8AE0FF" Offset="0.093"/>
                                        <GradientStop Color="#FF35A6E6" Offset="0.645"/>
                                        <GradientStop Color="#FF4DA6E4" Offset="0.712"/>
                                        <GradientStop Color="#FFAED3F4" Offset="0.942"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#22657C" BlurRadius="2" ShadowDepth="0" Opacity="0.8" Direction="315"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        
                        <!-- 内容区域 -->
                        <ContentPresenter Grid.Column="1"
                                          Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          RecognizesAccessKey="True">
                            <ContentPresenter.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                            </ContentPresenter.Effect>
                        </ContentPresenter>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- 悬停状态触发器 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="HoverBackground" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="HoverBackground" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <!-- 选中状态触发器 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CheckMark" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.05"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CheckMark" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.05"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <!-- 不确定状态触发器 -->
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IndeterminateMark" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.05"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="IndeterminateMark" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.05"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <!-- 禁用状态触发器 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Slider 隐式样式 -->
    <Style TargetType="{x:Type Slider}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 轨道背景 -->
                        <Border x:Name="TrackBackground"
                                Grid.Row="1"
                                Height="6"
                                CornerRadius="3"
                                VerticalAlignment="Center">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#60000000" Offset="0"/>
                                    <GradientStop Color="#40000000" Offset="0.5"/>
                                    <GradientStop Color="#30000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#40000000" Offset="0"/>
                                    <GradientStop Color="#20FFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Border.BorderThickness>1</Border.BorderThickness>
                        </Border>
                        
                        <!-- 进度轨道 -->
                        <Track x:Name="PART_Track" Grid.Row="1">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Style="{StaticResource SliderRepeatButtonTransparent}">
                                    <RepeatButton.Template>
                                        <ControlTemplate TargetType="RepeatButton">
                                            <Border Height="4" CornerRadius="2" VerticalAlignment="Center" Margin="2,0,0,0">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                        <GradientStop Color="#FF80D0FF" Offset="0"/>
                                                        <GradientStop Color="#FF40A0E0" Offset="0.4"/>
                                                        <GradientStop Color="#FF0080D0" Offset="0.5"/>
                                                        <GradientStop Color="#FF60B0E0" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <!-- 进度条发光效果 -->
                                                <Border CornerRadius="2" Margin="-1">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#4080C0FF" BlurRadius="4" ShadowDepth="0" Opacity="0.6"/>
                                                    </Border.Effect>
                                                </Border>
                                            </Border>
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </Track.DecreaseRepeatButton>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Style="{StaticResource SliderRepeatButtonTransparent}"/>
                            </Track.IncreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Style="{StaticResource SliderThumbStyle}"/>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                    
                    <!-- 垂直方向触发器 -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter TargetName="TrackBackground" Property="Width" Value="6"/>
                            <Setter TargetName="TrackBackground" Property="Height" Value="Auto"/>
                            <Setter TargetName="TrackBackground" Property="HorizontalAlignment" Value="Center"/>
                            <Setter TargetName="TrackBackground" Property="VerticalAlignment" Value="Stretch"/>
                            <Setter TargetName="PART_Track" Property="Orientation" Value="Vertical"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    <!--                                                                                               -->
    <!--                                  ListBox 隐式样式                                             -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    <!--                                                                                               -->
    <!--  此样式自动应用于所有 ListBox 控件，提供 Aero 风格的列表框外观。                                 -->
    <!--  设计来源：Designs/ListBoxItemBackground.png, ListBoxItemHover.xaml, ListBoxItemSelected.xaml -->
    <!--                                                                                               -->
    <!--  设计说明：                                                                                    -->
    <!--      ● 背景：使用 ListBoxItemBackground.png 作为背景图片                                        -->
    <!--      ● 内阴影：四周渐变内阴影，增强深度感                                                       -->
    <!--      ● 列表项悬停：青蓝色径向发光                                                              -->
    <!--      ● 列表项选中：更强的青蓝色径向发光                                                        -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->

    <!-- ListBoxItem 隐式样式 -->
    <Style TargetType="{x:Type ListBoxItem}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                    <Grid>
                        <!-- 悬停状态背景 - 基于 ListBoxItemHover.xaml -->
                        <Border x:Name="HoverBackground" Opacity="0" CornerRadius="3" BorderThickness="1">
                            <Border.BorderBrush>
                                <RadialGradientBrush RadiusX="1.181" RadiusY="1.095" Center="0.5,-0.195" GradientOrigin="0.5,-0.195">
                                    <GradientStop Color="#FF5984AD" Offset="0"/>
                                    <GradientStop Color="#FFFFFFFF" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.BorderBrush>
                            <Border.Background>
                                <RadialGradientBrush RadiusX="1.182" RadiusY="1.104" Center="0.5,-0.201" GradientOrigin="0.5,-0.201">
                                    <GradientStop Color="#374588BD" Offset="0"/>
                                    <GradientStop Color="#081AD5FF" Offset="0.691"/>
                                    <GradientStop Color="#1FFFFFFF" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 选中状态背景 - 基于 ListBoxItemSelected.xaml -->
                        <Border x:Name="SelectedBackground" Opacity="0" CornerRadius="3" BorderThickness="1">
                            <Border.BorderBrush>
                                <RadialGradientBrush RadiusX="1.181" RadiusY="1.095" Center="0.5,-0.195" GradientOrigin="0.5,-0.195">
                                    <GradientStop Color="#FF5984AD" Offset="0"/>
                                    <GradientStop Color="#FFFFFFFF" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.BorderBrush>
                            <Border.Background>
                                <RadialGradientBrush RadiusX="1.182" RadiusY="1.104" Center="0.5,-0.201" GradientOrigin="0.5,-0.201">
                                    <GradientStop Color="#A34588BD" Offset="0"/>
                                    <GradientStop Color="#111AD5FF" Offset="0.691"/>
                                    <GradientStop Color="#31FFFFFF" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 内容呈现器 -->
                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                            <ContentPresenter.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="2" ShadowDepth="1" Opacity="0.3"/>
                            </ContentPresenter.Effect>
                        </ContentPresenter>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- 悬停状态触发器 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="HoverBackground" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="HoverBackground" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <!-- 选中状态触发器 -->
                        <Trigger Property="IsSelected" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="SelectedBackground" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="SelectedBackground" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <!-- 选中且悬停状态 - 保持选中状态的显示 -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True"/>
                                <Condition Property="IsMouseOver" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="SelectedBackground" Property="Opacity" Value="1"/>
                            <Setter TargetName="HoverBackground" Property="Opacity" Value="0"/>
                        </MultiTrigger>
                        
                        <!-- 禁用状态触发器 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListBox 隐式样式 -->
    <Style TargetType="{x:Type ListBox}">
        <Setter Property="Foreground" Value="Transparent"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBox}">
                    <Grid>
                        <!-- 主背景层 - 使用 ListBoxItemBackground.png -->
                        <Border CornerRadius="4">
                            <Border.Background>
                                <ImageBrush ImageSource="/Cascade;component/Resources/ListBoxItemBackground.png" Stretch="Fill"/>
                            </Border.Background>
                        </Border>
                        
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        <!-- 内阴影效果 - 使用传统渐变实现                                              -->
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        
                        <!-- 顶部内阴影 -->
                        <Border CornerRadius="4,4,0,0" Height="12" VerticalAlignment="Top" IsHitTestVisible="False">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#60000000" Offset="0"/>
                                    <GradientStop Color="#30000000" Offset="0.5"/>
                                    <GradientStop Color="#00000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 左侧内阴影 -->
                        <Border CornerRadius="4,0,0,4" Width="8" HorizontalAlignment="Left" IsHitTestVisible="False">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#40000000" Offset="0"/>
                                    <GradientStop Color="#20000000" Offset="0.5"/>
                                    <GradientStop Color="#00000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 右侧内阴影 -->
                        <Border CornerRadius="0,4,4,0" Width="8" HorizontalAlignment="Right" IsHitTestVisible="False">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                                    <GradientStop Color="#40000000" Offset="0"/>
                                    <GradientStop Color="#20000000" Offset="0.5"/>
                                    <GradientStop Color="#00000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 底部内阴影 -->
                        <Border CornerRadius="0,0,4,4" Height="8" VerticalAlignment="Bottom" IsHitTestVisible="False">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                    <GradientStop Color="#30000000" Offset="0"/>
                                    <GradientStop Color="#10000000" Offset="0.5"/>
                                    <GradientStop Color="#00000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        
                        <!-- 内容区域 -->
                        <ScrollViewer Margin="6" Focusable="False">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    <!--                                                                                               -->
    <!--                                ProgressBar 隐式样式                                           -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->
    <!--                                                                                               -->
    <!--  此样式自动应用于所有 ProgressBar 控件，提供 Aero 风格的进度条外观。                             -->
    <!--  设计来源：Designs/ProgressBarContainer.xaml, ProgressBarContent.xaml                          -->
    <!--                                                                                               -->
    <!--  设计说明：                                                                                    -->
    <!--      ● 容器：圆角边框，径向渐变边框（青蓝色到白色），半透明白色渐变填充                           -->
    <!--      ● 进度条：青蓝色渐变填充，从浅青色到深青色，带有中间的深色分界                              -->
    <!--      ● 圆角：6px 圆角，保持 Aero 风格的柔和外观                                                 -->
    <!--                                                                                               -->
    <!-- ═══════════════════════════════════════════════════════════════════════════════════════════ -->

    <Style TargetType="{x:Type ProgressBar}">
        <Setter Property="Height" Value="24"/>
        <Setter Property="MinHeight" Value="24"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#FF3D7FA8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid>
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        <!-- 容器背景 - 基于 ProgressBarContainer.xaml                                 -->
                        <!-- ═══════════════════════════════════════════════════════════════════════ -->
                        
                        <!-- 容器：径向渐变边框 + 半透明白色渐变填充 -->
                        <Border x:Name="PART_Track" CornerRadius="2" BorderThickness="1">
                            <Border.BorderBrush>
                                <RadialGradientBrush RadiusX="1.105" RadiusY="0.470" Center="0.5,-0.052" GradientOrigin="0.5,-0.052">
                                    <RadialGradientBrush.RelativeTransform>
                                        <RotateTransform CenterX="0.5" CenterY="-0.052" Angle="90"/>
                                    </RadialGradientBrush.RelativeTransform>
                                    <GradientStop Color="#FF5984AD" Offset="0"/>
                                    <GradientStop Color="#FFFFFFFF" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.BorderBrush>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0.5,-0.057" EndPoint="0.5,1.057">
                                    <GradientStop Color="#3FFFFFFF" Offset="0"/>
                                    <GradientStop Color="#20000000" Offset="0.527"/>
                                    <GradientStop Color="#41FFFFFF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            
                            <!-- ═══════════════════════════════════════════════════════════════════════ -->
                            <!-- 进度条内容 - 基于 ProgressBarContent.xaml                                 -->
                            <!-- ═══════════════════════════════════════════════════════════════════════ -->
                            
                            <!-- 进度条：青蓝色渐变填充 -->
                            <Border x:Name="PART_Indicator" 
                                    CornerRadius="1" 
                                    HorizontalAlignment="Left"
                                    Margin="2">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,-0.225" EndPoint="0.5,1.225">
                                        <GradientStop Color="#FF95C8E2" Offset="0"/>
                                        <GradientStop Color="#FD3D7FA8" Offset="0.483"/>
                                        <GradientStop Color="#FC286792" Offset="0.512"/>
                                        <GradientStop Color="#FC46A1C9" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
